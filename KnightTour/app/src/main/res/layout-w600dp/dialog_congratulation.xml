<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@drawable/dialog_background">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/textView5"
              app:layout_constraintEnd_toEndOf="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/textView5"
              android:id="@+id/congratulation_clear_time" tools:text="Time: 00:34"
              android:textColor="@android:color/white" android:textStyle="bold" android:fontFamily="@font/carter_one"
              android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <TextView
            android:text="Stage Clear!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:fontFamily="@font/carter_one"
            android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="viewStart" android:textStyle="bold"
            android:textColor="#F4FD44" android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>
    <Button
            android:id="@+id/stage_select_congratulation_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stage Select"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/congratulation_rank" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@drawable/dialog_button_background1"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/white" android:fontFamily="@font/carter_one" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/congratulation_rank"
            app:layout_constraintTop_toBottomOf="@+id/congratulation_clear_time"
            app:layout_constraintEnd_toEndOf="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/textView5"
            tools:text="Rank: S" android:fontFamily="@font/carter_one" android:textStyle="bold"
            android:textColor="@android:color/white" android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
</android.support.constraint.ConstraintLayout>