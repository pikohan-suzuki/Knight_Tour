<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/title_background">

    <ImageButton
            android:id="@+id/how_to_play_ImageButton"
            android:layout_width="109dp"
            android:layout_height="107dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="1.0" android:scaleType="fitCenter"
            app:srcCompat="@drawable/how_to_play_button" android:background="?android:attr/panelBackground"/>
    <ImageButton
            android:id="@+id/from_beginning_imageButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline16"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline21" android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/start_button"
            android:scaleType="fitCenter" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/guideline15" app:layout_constraintHorizontal_bias="0.0"
            android:background="?android:attr/panelBackground"/>
    <ImageButton
            android:id="@+id/select_stage_front_ImageButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline21" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline16"
            android:scaleType="fitCenter" app:srcCompat="@drawable/stage_select_button"
            app:layout_constraintBottom_toTopOf="@+id/guideline15" android:background="?android:attr/panelBackground"/>
    <ImageButton
            android:id="@+id/privacy_policy_imageButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/guideline27"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline26"
            android:scaleType="fitCenter" app:srcCompat="@drawable/privacy_policy_button"
            android:background="?android:attr/panelBackground"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.32"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/title"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/guideline"
            android:layout_marginBottom="8dp" android:scaleType="fitCenter"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline15"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.75"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline16"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline21"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.47"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline26"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.37"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline27"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.9"/>
</android.support.constraint.ConstraintLayout>