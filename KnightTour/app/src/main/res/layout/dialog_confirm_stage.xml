<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@drawable/dialog_background">

    <TextView
            android:text="Record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:fontFamily="@font/carter_one"
            android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="viewStart" android:textStyle="bold"
            android:textColor="#F4FD44" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:id="@+id/stage_id_confirm_start_textView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" tools:text="Stage: 1" android:fontFamily="@font/carter_one"
            android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:textColor="@android:color/white" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/rank_confirm_start_textView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/time_confirm_start_textView" tools:text="Rank:"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.5"
            android:fontFamily="@font/carter_one" android:textStyle="bold" android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/time_confirm_start_textView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@id/stage_id_confirm_start_textView"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/textView2"
            tools:text="Time: 00:34" app:layout_constraintHorizontal_bias="0.50" android:fontFamily="@font/carter_one"
            android:textStyle="bold" android:textColor="@android:color/white" android:layout_marginStart="8dp"/>
    <Button
            android:id="@+id/start_confirm_start_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline6"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rank_confirm_start_textView"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"
            android:text="Start!"
            android:background="@drawable/dialog_background2" android:textColor="@android:color/white"
            android:textStyle="bold" android:fontFamily="@font/carter_one"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

    <Button
            android:id="@+id/back_confirm_start_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/start_confirm_start_button"
            app:layout_constraintBottom_toBottomOf="@+id/start_confirm_start_button"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
            android:text="Back"
            android:background="@drawable/dialog_button_background1" android:textColor="@android:color/white"
            android:fontFamily="@font/carter_one" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@drawable/rank_s"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/rank_confirm_start_textView"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_confirm_start_textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/start_confirm_start_button"/>
</android.support.constraint.ConstraintLayout>