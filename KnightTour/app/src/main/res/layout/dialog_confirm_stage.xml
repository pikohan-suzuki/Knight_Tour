<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/stage_id_confirm_start_textView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/rank_confirm_start_textView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/time_confirm_start_textView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/start_confirm_start_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/back_confirm_start_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>